<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="主持的遊戲"
                android:textAlignment="center"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="185dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/list_content01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="資訊系迎新宿營"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:layout_weight="0.42" />

                <TextView
                    android:id="@+id/host01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主持人:" />

                <TextView
                    android:id="@+id/list_name01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.16"
                    android:text="陳柏翔" />

                <Button
                    android:id="@+id/list_button01"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:text="啟動" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_content02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="參加的遊戲"
                android:textAlignment="center"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="185dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list_content03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.09"
                    android:text="認識逢甲"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/host02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主持人:" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蔡昌銘" />

                <Button
                    android:id="@+id/list_burtton02"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:text="啟動" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>